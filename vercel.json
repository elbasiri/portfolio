{
     "version": 2,
     "builds": [
       {
         "src": "public/index.php",
         "use": "@vercel/php"
       },
       {
         "src": "public/.htaccess",
         "use": "@vercel/static"
       }
     ],
     "routes": [
       {
         "src": "/(.*)",
         "dest": "/public/index.php"
       }
     ],
     "env": {
       "APP_ENV": "production",
       "APP_KEY": "<your-app-key>",
       "DB_CONNECTION": "mysql",
       "DB_HOST": "<your-db-host>",
       "DB_PORT": "<your-db-port>",
       "DB_DATABASE": "<your-db-name>",
       "DB_USERNAME": "<your-db-username>",
       "DB_PASSWORD": "<your-db-password>"
     }
   }
   